{
    "name": "contact",
    "displayName": "Contact Form Module",
    "description": "Complete contact form system with email functionality for user inquiries",
    "version": "1.0.0",
    "author": "StrataPHP",
    "license": "MIT",
    "category": "forms",
    "tags": ["contact", "form", "email", "phpmailer"],
    "type": "module",
    "framework": "strataphp",
    "frameworkVersion": ">=1.0.0",
    
    "autoload": {
        "psr-4": {
            "App\\Modules\\Contact\\": ""
        }
    },
    
    "routes": {
        "file": "routes.php",
        "prefix": "/contact"
    },
    
    "forms": [
        {
            "name": "contact_form",
            "fields": {
                "name": {
                    "type": "text",
                    "required": true,
                    "validation": "string|max:255"
                },
                "email": {
                    "type": "email",
                    "required": true,
                    "validation": "email"
                },
                "phone": {
                    "type": "tel",
                    "required": false,
                    "validation": "string|max:20"
                },
                "subject": {
                    "type": "text",
                    "required": true,
                    "validation": "string|max:255"
                },
                "message": {
                    "type": "textarea",
                    "required": true,
                    "validation": "string|min:10"
                }
            },
            "csrf_protection": true
        }
    ],
    
    "dependencies": {
        "php": ">=7.4",
        "strataphp": ">=1.0.0",
        "phpmailer/phpmailer": "^6.0"
    },
    
    "config": {
        "enabled": true,
        "mail": {
            "required": true,
            "fields": ["host", "username", "password", "port", "from_email", "to_email"]
        }
    },
    
    "permissions": {
        "public": true,
        "authentication": false,
        "roles": []
    },
    
    "files": {
        "controllers": [
            "controllers/ContactFormController.php"
        ],
        "models": [
            "models/Contact.php"
        ],
        "views": [
            "views/contact_form.php"
        ],
        "routes": ["routes.php"],
        "entry": ["index.php"]
    },
    
    "testing": {
        "unit_tests": false,
        "integration_tests": false,
        "form_tests": false,
        "email_tests": false
    },
    
    "documentation": {
        "readme": "README.md",
        "examples": true,
        "configuration_guide": true
    },
    
    "quality": {
        "code_style": "PSR-12",
        "static_analysis": false,
        "security_scan": false
    },
    
    "performance": {
        "caching": false,
        "database_queries": 0,
        "external_requests": true,
        "email_sending": true
    },
    
    "security": {
        "input_validation": true,
        "output_sanitization": true,
        "csrf_protection": true,
        "authentication": false,
        "authorization": false,
        "email_injection_protection": true
    },
    
    "features": [
        "Contact form with validation",
        "CSRF protection",
        "Email sending via PHPMailer",
        "Input sanitization",
        "Success/error feedback",
        "Customizable form fields"
    ],
    
    "requirements": {
        "email_configuration": "SMTP settings required in config.php",
        "php_extensions": ["openssl", "mbstring"],
        "permissions": ["write access to logs"]
    },
    
    "created_at": "2024-01-01T00:00:00Z",
    "updated_at": "2024-01-01T00:00:00Z"
}