{
    "name": "api",
    "displayName": "API Module",
    "description": "REST API endpoints for the StrataPHP framework providing JSON-based data access",
    "version": "1.0.0",
    "author": "StrataPHP",
    "license": "MIT",
    "category": "api",
    "tags": ["api", "rest", "json", "endpoints"],
    "type": "module",
    "framework": "strataphp",
    "frameworkVersion": ">=1.0.0",
    
    "autoload": {
        "psr-4": {
            "App\\Modules\\Api\\": ""
        }
    },
    
    "routes": {
        "file": "routes.php",
        "prefix": "/api"
    },
    
    "endpoints": [
        {
            "method": "GET",
            "path": "/api/v1/jokes/random",
            "description": "Get a random joke",
            "response": "json"
        },
        {
            "method": "GET", 
            "path": "/api/v1/jokes/{id}",
            "description": "Get a specific joke by ID",
            "parameters": {
                "id": {
                    "type": "integer",
                    "required": true,
                    "description": "Joke ID"
                }
            },
            "response": "json"
        }
    ],
    
    "dependencies": {
        "php": ">=7.4",
        "strataphp": ">=1.0.0"
    },
    
    "config": {
        "enabled": true,
        "api_version": "v1",
        "rate_limiting": false
    },
    
    "permissions": {
        "public": true,
        "authentication": false,
        "roles": []
    },
    
    "files": {
        "controllers": [
            "controllers/ApiController.php",
            "controllers/ApiHelper.php",
            "controllers/JokesApiController.php"
        ],
        "routes": ["routes.php"],
        "config": ["config/"],
        "views": ["views/"]
    },
    
    "testing": {
        "unit_tests": false,
        "integration_tests": false,
        "api_tests": false
    },
    
    "documentation": {
        "readme": "README.md",
        "api_docs": false,
        "examples": false
    },
    
    "quality": {
        "code_style": "PSR-12",
        "static_analysis": false,
        "security_scan": false
    },
    
    "performance": {
        "caching": false,
        "database_queries": 0,
        "external_requests": false
    },
    
    "security": {
        "input_validation": true,
        "output_sanitization": true,
        "csrf_protection": false,
        "authentication": false,
        "authorization": false
    },
    
    "created_at": "2024-01-01T00:00:00Z",
    "updated_at": "2024-01-01T00:00:00Z"
}