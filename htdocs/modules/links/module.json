{
    "name": "links",
    "displayName": "Links Module",
    "description": "Linktree-style landing page for displaying organized collections of links",
    "version": "1.0.0",
    "author": "StrataPHP",
    "license": "MIT",
    "category": "content",
    "tags": ["linktree", "links", "social", "bio", "portfolio"],
    "type": "module",
    "framework": "strataphp",
    "frameworkVersion": ">=1.0.0",
    
    "autoload": {
        "psr-4": {
            "App\\Modules\\Links\\": ""
        }
    },
    
    "routes": {
        "file": "routes.php",
        "prefix": "/links",
        "can_be_default": true
    },
    
    "database": {
        "tables": ["links"],
        "migrations": ["006_create_links_table.php"],
        "requires_migration": true
    },
    
    "dependencies": {
        "php": ">=7.4",
        "strataphp": ">=1.0.0",
        "modules": ["admin"]
    },
    
    "config": {
        "enabled": true,
        "can_be_default_module": true,
        "adult_warning": {
            "type": "boolean",
            "default": false,
            "description": "Show adult content warning"
        }
    },
    
    "permissions": {
        "public": true,
        "authentication": false,
        "roles": [],
        "admin_management": true
    },
    
    "files": {
        "controllers": [
            "controllers/LinksController.php"
        ],
        "views": [
            "views/links.php",
            "views/about.php"
        ],
        "routes": ["routes.php"],
        "entry": ["index.php"]
    },
    
    "admin_integration": {
        "manageable": true,
        "model": "App\\Modules\\Admin\\Models\\Links",
        "crud_operations": ["create", "read", "update", "delete", "reorder"]
    },
    
    "testing": {
        "unit_tests": false,
        "integration_tests": false,
        "database_tests": false
    },
    
    "documentation": {
        "readme": "README.md",
        "examples": true,
        "admin_guide": true
    },
    
    "quality": {
        "code_style": "PSR-12",
        "static_analysis": false,
        "security_scan": false
    },
    
    "performance": {
        "caching": false,
        "database_queries": 1,
        "external_requests": false,
        "mobile_optimized": true
    },
    
    "security": {
        "input_validation": true,
        "output_sanitization": true,
        "csrf_protection": false,
        "authentication": false,
        "authorization": false,
        "sql_injection_protection": true
    },
    
    "features": [
        "Linktree-style link display",
        "Database-driven link management",
        "About page with bio",
        "Mobile-friendly design",
        "Link ordering",
        "Admin panel integration",
        "Adult content warning support"
    ],
    
    "responsive_design": {
        "mobile_first": true,
        "breakpoints": ["xs", "sm", "md", "lg"],
        "touch_friendly": true
    },
    
    "customization": {
        "themes": false,
        "custom_css": true,
        "layout_options": false,
        "social_integration": false
    },
    
    "seo": {
        "meta_tags": true,
        "structured_data": false,
        "sitemap": false
    },
    
    "created_at": "2024-01-01T00:00:00Z",
    "updated_at": "2024-01-01T00:00:00Z"
}