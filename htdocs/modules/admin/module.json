{
    "name": "admin",
    "displayName": "Admin Panel Module",
    "description": "Comprehensive administration panel with user management, module management, and system controls",
    "version": "1.0.0",
    "author": "StrataPHP",
    "license": "MIT",
    "category": "administration",
    "tags": ["admin", "management", "control-panel", "users", "modules"],
    "type": "module",
    "framework": "strataphp",
    "frameworkVersion": ">=1.0.0",
    
    "autoload": {
        "psr-4": {
            "App\\Modules\\Admin\\": ""
        }
    },
    
    "routes": {
        "prefix": "/admin",
        "middleware": ["admin_auth"],
        "routes": [
            {
                "method": "GET",
                "path": "/",
                "controller": "AdminController@index",
                "name": "admin.dashboard"
            },
            {
                "method": "GET",
                "path": "/modules",
                "controller": "ModuleManagerController@index",
                "name": "admin.modules"
            },
            {
                "method": "POST",
                "path": "/modules/update",
                "controller": "ModuleManagerController@update",
                "name": "admin.modules.update"
            },
            {
                "method": "GET",
                "path": "/users",
                "controller": "UserAdminController@index",
                "name": "admin.users"
            },
            {
                "method": "GET",
                "path": "/links",
                "controller": "AdminLinksController@index",
                "name": "admin.links"
            }
        ]
    },
    
    "permissions": [
        "admin.access",
        "admin.modules.manage",
        "admin.users.manage",
        "admin.links.manage"
    ],
    
    "dependencies": {
        "php": ">=8.0",
        "strataphp": ">=1.0.0"
    },
    
    "configuration": {
        "settings": {
            "dashboard_widgets": ["users", "modules", "system_status"],
            "items_per_page": 20,
            "session_timeout": 3600
        }
    },
    
    "database": {
        "migrations": [],
        "seeds": []
    },
    
    "assets": {
        "css": [
            "assets/css/admin.css"
        ],
        "js": [
            "assets/js/admin.js"
        ]
    },
    
    "views": {
        "theme": "admin",
        "layouts": {
            "default": "views/layouts/admin.php"
        }
    },
    
    "hooks": {
        "module.enabled": "onModuleEnabled",
        "user.created": "onUserCreated"
    }
}